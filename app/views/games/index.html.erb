
<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Game</th>
      <th>Rules</th>
      <th>cover</th>
      <th>Pieces</th>
      <th>Pdf</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.rules %></td>
        <% if game.cover_image.attached? %>
          <td><%= image_tag game.cover_image.variant(resize: "100x100",type: :grayscale ) %></td>
        <% end %>
        <% if game.pieces_images.attached? %>
          <td>
            <% game.pieces_images.each do |img| %>
              <%= image_tag img.variant(resize: "100x100",type: :grayscale ) %>
            <% end %>
           </td> 
        <% end %>
        <% if game.pdf_rules.attached? %>
          <td><%= link_to 'Dowload Pdf', game.pdf_rules %></td>
        <% end %>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

